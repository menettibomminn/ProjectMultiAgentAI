# .ralphrc - Ralph project configuration
# Generated by: ralph enable â†’ customized for ProjectMultiAgentAI
# Documentation: https://github.com/frankbria/ralph-claude-code

# Project identification
PROJECT_NAME="ProjectMultiAgentAI"
PROJECT_TYPE="python"

# Claude Code CLI command
CLAUDE_CODE_CMD="claude"

# Loop settings
MAX_CALLS_PER_HOUR=60
CLAUDE_TIMEOUT_MINUTES=20
CLAUDE_OUTPUT_FORMAT="json"

# Tool permissions
# Python project: pytest, pip, python; safe git subcommands only
ALLOWED_TOOLS="Write,Read,Edit,Bash(git add *),Bash(git commit *),Bash(git diff *),Bash(git log *),Bash(git status),Bash(git status *),Bash(git push *),Bash(git pull *),Bash(git fetch *),Bash(git checkout *),Bash(git branch *),Bash(git stash *),Bash(git merge *),Bash(git tag *),Bash(python *),Bash(python -m pytest *),Bash(pip install *),Bash(pip *),Bash(flake8 *),Bash(mypy *),Bash(where *),Bash(cmd *),Bash(cmd.exe *),Bash(powershell *),Bash(powershell.exe *),Bash(pytest *),Bash(MSYS_NO_PATHCONV=* *),Bash(PATH=* *),Bash(ls *),Bash(cat *),Bash(mkdir *),Bash(touch *),Bash(rm *),Bash(cp *),Bash(mv *)"

# Session management
SESSION_CONTINUITY=true
SESSION_EXPIRY_HOURS=24

# Task sources
TASK_SOURCES="local"
GITHUB_TASK_LABEL="ralph-task"
BEADS_FILTER="status:open"

# Circuit breaker thresholds
CB_NO_PROGRESS_THRESHOLD=3
CB_SAME_ERROR_THRESHOLD=5
CB_OUTPUT_DECLINE_THRESHOLD=70
